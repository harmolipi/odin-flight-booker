<%= simple_form_for flight, method: :get, url: flights_path, defaults: { wrapper: false } do |f| %>
  <div class="field is-grouped is-grouped-multiline">
    <div class="control">
      <%= f.label :from_airport, "From", required: true, class: "label" %>
      <div class="select">
        <%= f.input :from_airport, collection: airport_options, required: true, label: false, selected: params[:from_airport] || airport_options.first, input_html: { class: "input" } %>
      </div>
    </div>

    <div class="control">
      <%= f.label :to_airport, "To", class: "label" %>
      <div class="select">
        <%= f.input :to_airport, collection: airport_options, required: true, label: false, selected: params[:to_airport] || airport_options.second, input_html: { class: "input" } %>
      </div>
    </div>

    <div class="control">
      <%= f.input :departure_date, html5: true, input_html: { class: "input", value: params[:departure_date] }, label_html: { class: "label" } %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.button :submit, "Find flights", class: "button is-info" %>
    </div>
  </div>
<% end %>
