<h2 class="title is-2">Select your flight</h2>

<div class="columns">
  <div class="column"></div>
  <div class="column is-three-fifths">
  <section class="section">
    <div class="card">
      <div class="card-content">
        <div class="content">
          <%= render "form", flight: @flight, airport_options: @airport_options, params: @params, passengers: @passengers %>
        </div>
      </div>
    </div>
  </section>
  <section class="section">
  <div class="box">
    <%= render "display_flights", flights: @flights, params: @params %>
  </div>
  </section>
  </div>
  <div class="column"></div>
</div>
